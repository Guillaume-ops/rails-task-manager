<%= form_with model: @task do |f| %>
  <div>
  <%= f.label :title  %>
  <%= f.text_field :title  %>
  </div>
  <div>
  <%= f.label :details  %>
  <%= f.text_area :details  %>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :completed %> Completed
    </label>
  </div>

  <%= f.submit %>
<% end %>

<div>
<%= link_to "Back to list", tasks_path %>
</div>
